<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../partials/head %>  
</head>

<body class="sidebar_main_open sidebar_main_swipe">
 	
     <!--Top Header-->
    <% include ../../partials/mainheader %>
 
    <!--Top Header-->
    <% include ../../partials/sidemenu %>

     <!--Content-->

     <!--Start Content-->

<div id="page_content">
    <div id="page_content_inner">
		<h3 class="heading_b uk-margin-bottom">Gallery</h3>
		<form id="form" class="new" enctype="multipart/form-data" action="/gallery/save" method="post">	
			<div class="md-card">
            <div class="md-card-content">
	            <div class="uk-grid">
                  <div class="uk-width-medium-1-2" >
                    <div class="uk-form-row valid" >
                        <input type="text" class="md-input md-input-success" id="galleryname" name="galleryname" placeholder="Gallery Name"  /><span class="req">*</span>
                               
                    </div>
                    <div class="uk-form-row valid" >
                        <input type="text" class="md-input md-input-success" id="displayname" name="displayname" placeholder="Display Name"  /><span class="req">*</span>
                               
                    </div>
                    
                    <div class="uk-form-row">
                        <label>Logo</label>
                        <input type="file" id="imgInp" name="imgInp" multiple accept=".jpg, .png, .jpeg|image/*" />
                        <img id="blah" src="/img/thumbnail.svg" alt="Your Image" width="100px" height="50px" />
                    </div>  
                    <div class="uk-form-row">
                        <input type="hidden" id="imagename" name="imagename">  
                    </div>  
                    <div class="uk-form-row" >
                       <button type="submit" class="md-btn md-btn-success"><i class="uk-icon-save white paddingleft"></i>Save</button>
                       <a href="/gallery" class="md-btn md-btn-success"><i class="uk-icon-remove white paddingleft"></i>Cancel</a>
                    </div>
                   </div>
                </div> 
            </div>       
			</div>
        </form>   

        <span id="status"/> 
    </div>
</div>

<!--End Content--> 


    <!--Start Script-->
    <% include ../../partials/footer %>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#blah').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
                console.log(input.files[0].name);
                document.getElementById("imagename").value = input.files[0].name ;
            }
        }
    
        $("#imgInp").change(function(){
            readURL(this);

        });
        
    </script>
</body>
</html>