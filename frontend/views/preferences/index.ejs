<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../partials/head %>
    <link rel="stylesheet" type="text/css" href="/css/datatables.css"/>
</head>

<body class="sidebar_main_open sidebar_main_swipe">
 
     <!--Top Header-->
    <% include ../../partials/mainheader %>
    <!--Top Header-->
    <% include ../../partials/sidemenu %>

    <!--Content-->
    <!--Start Content-->

    <div id="page_content">
        <div id="page_content_inner">
        <h3 class="heading_b uk-margin-bottom">Preferences List</h3>
       
        <!--Content Page-->
        <div class="md-card">
            <div class="md-card-content">
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <table class="display" id="example" width="100%">
                           <thead>
                                    <tr>
                                        <th><strong>Customer Name</strong></th>
                                        <th><strong>Time Zone </strong></th>
                                        <th><strong>Date Format</strong></th>
                                        <th><strong>Row Per Page</strong></th>
                                        <th><strong>Landing Page</strong></th>
                                        <th><strong>Offline Duration</strong></th>
                                        <th><strong>Edit</strong></th>
                                        <!-- <th><strong>Delete</strong></th> -->
                                            
                                    </tr>
                           </thead>
                            <tbody>
                            <%  if(JSON.stringify(datas) === '{}'){
                                    console.log("step-2");
                                }else{
                                    datas.forEach(function(d) { %>
                                            <tr>
                                               <td><%= d.customer_name%></td>
                                                <td><%= d.time_zone%></td>
                                                <td><%= d.date_format %></td>
                                                <td><%= d.page_refresh%></td>
                                                <td><%= d.landing_page%></td>
                                                <td><%= d.site_report%></td>
                                                <td><a href='/preferences/edit/<%=d.preference_id%>' class='uk-icon-edit editicon' title='Edit'></td>
                                               <!--  <td><a  href='/preferences/delete/<%=d.preference_id%>' onclick='return confirm("Are you sure to delete?")' class='uk-icon-trash editicon'  title='Delete' ></td> -->
                                            </tr>
                                <%  });  
                                } %> 
                    
                        </tbody> 
                        </table>
                        
                    </div>
                </div>
            </div>
        </div>   
        <!--End of Content Page-->
    </div>
</div>

<!--End Content--> 


<!--Start Script-->
    <% include ../../partials/footer %>
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function() {
            $('#example').DataTable();
            
        });
        // For demo to fit into DataTables site builder...
        $('#example')
        .removeClass( 'display' )
        .addClass('uk-table uk-table-striped');
    </script>

</body>
</html>