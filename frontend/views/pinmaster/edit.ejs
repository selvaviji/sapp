<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../partials/head %>
    <link rel="stylesheet" href="/css/style.css" media="all">
    <script>
        var sid = "<%= sess_id %>";
        var sname = "<%= sess_name %>";
        console.log("session id:"+sid+"::session name:"+sname);
        var cid = "<%=data[0].customer_id%>";
    </script>    
</head>

<body class="sidebar_main_open sidebar_main_swipe">
 	<!--Top Header-->
    <% include ../../partials/mainheader %>
    <!--Top Header-->
    <% include ../../partials/sidemenu %>
    
    <!--Start Content-->

    <div id="page_content">
        <div id="page_content_inner">
		<h3 class="heading_b uk-margin-bottom">Pin</h3>
		<form method="POST" class="edit" onsubmit="return pintextvalidate()" action="/pinmaster/update">
			<div class="md-card" style="height:auto;  padding:20px;">
                <div class="uk-grid">
                  <div class="uk-width-medium-1-2" >
                    
    	            <div class="uk-form-row valid" >
                        <div class="txtlabel">Pin Name</div>
                        <input type="text" class="md-input md-input-success" id="pinname" name="pinname" value="<%=data[0].pin_name%>" placeholder="PIN Name"/><span class="req">*</span>
                          
                    </div>
                    <div class="uk-form-row valid" >
                        <input type="text" class="md-input md-input-success" id="pinscode" name="pinscode" value="<%=data[0].pin_scode%>"placeholder="Pin Short Code"/>
                    </div>
                   
                    <div class="uk-form-row" >
                       <div class="txtlabel">Description</div>
                       <input type="text" class="md-input md-input-success" id="pindesc" name="pindesc" placeholder="Description" value="<%=data[0].pin_desc %>"/>
                    </div>
                    
                    <div class="uk-form-row" >   
                        <input type="hidden" class="md-input md-input-success" id="pid" name="pid" value="<%=data[0].id%>"/>
                    </div>
                    <div class="uk-form-row" >
                       <button type="submit" class="md-btn md-btn-success"><i class="uk-icon-save white paddingleft"></i>Save</button>
                       <button type="button" onClick="cancelPinMaster();" class="md-btn md-btn-success"><i class="uk-icon-remove white paddingleft"></i>Cancel</button>
                    </div>
                  </div>
                </div>    
			</div>
		</form>	
        </div>
    </div>
    <!--End Content--> 
    
    <!--Start Script-->
    <% include ../../partials/footer %>
    <script>
    $("#pinname").on('blur keyup',function(e){
        alpha1('pinname');
    });
    $("#pinscode").on('blur keyup',function(e){
        alpha1('pinscode');
    });
  </script>
   
</body>
</html>