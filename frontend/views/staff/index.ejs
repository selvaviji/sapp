<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../partials/head %>  
</head>

<body class="sidebar_main_open sidebar_main_swipe">
    <!--Top Header-->
    <% include ../../partials/mainheader %>
    <!--Top Header-->
    <% include ../../partials/sidemenu %>

<!--Start Content-->
<div id="page_content">
    <div id="page_content_inner">
        <h3 class="heading_b uk-margin-bottom">Staffs List</h3>
        <!--Content Page-->
	
        <div class="md-card">
          
            <div class="md-card-content">
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <table id="bodydata" width="100%">
                            <thead>
                                <tr>
                                    <th><strong>Staff Name</strong></th>
                                    <th><strong>Designation</strong></th>
                                    <th><strong>Qualification</strong></th>
                                    <th><strong>Gender</strong></th>
                                    <th><strong>DOJ</strong></th>
                                    <th><strong>Status</strong></th>
                                    <th><strong>Edit</strong></th>
                                    <th><strong>Delete</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                            <%  if(JSON.stringify(datas) === '{}'){
                                    console.log("step-2");
                                }else{
                                    datas.forEach(function(d) { %>
                                        <tr>
                                            <td><%= d.staff_name%></td>
                                            <td><%= d.design_name%></td>
                                            <td><%= d.qualification%></td>
                                            <td>
                                                <% if(d.gender=='0'){%>
                                                    Male
                                                <% }else{%>
                                                    Female
                                                <% } %>
                                            </td>
                                            <td><%= d.doj%></td>
                                            <td><% if(d.status=='0'){%>
                                                    Enable
                                                <% }else{%>
                                                    Disable
                                                <% } %>
                                            </td>
                                            <td><a href='/staff/edit/<%=d.id%>' class='uk-icon-edit editicon' title='Edit'></a></td>
                                            <td><a  href='/staff/delete/<%=d.id%>' onclick='return confirm("Are you sure to delete?")' class='uk-icon-trash editicon'  title='Delete' ></a></td>
                                        </tr>
                           <%       });  
                                } %> 
                            </tbody> 
                        </table>
                    </div>
                </div>
            </div>
        </form>
        </div>   
        <!--End of Content Page-->
    </div>
</div>
<!--End Content--> 


<!--Start Script-->
<script src="/moment/min/moment.min.js"></script>

<script src="/js/uikit_custom.min.js"></script>
<script src="/js/altair_admin_common.min.js"></script>
<script src="/js/valid.js"></script>
<script type="text/javascript" src="/js/datatables.js"></script>

<script>
    $(document).ready(function() {
        var sess_id = "<%= sess_id %>";
        $('#bodydata').DataTable();
        $('<div class="md-btn md-btn-success "><a href="/staff/add" ><i class="uk-icon-user white paddingleft"></i>Create</a></div>').appendTo('div.btn1');
       
    
        $('#bodydata')
        .removeClass( 'display' )
        .addClass('uk-table uk-table-striped'); 
    });

    
    
</script>
</body>
</html>
