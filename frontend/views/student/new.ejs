<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../partials/head %>
</head>

<body class="sidebar_main_open sidebar_main_swipe">
 	  <% include ../../partials/mainheader %>
    <% include ../../partials/sidemenu %>
    
    <!--Start Content-->

<div id="page_content">
    <div id="page_content_inner">
		<h3 class="heading_b uk-margin-bottom">Student</h3>
        <!--Geographical Select-->
        <form id="form" class="new" enctype="multipart/form-data" action="/student/save" method="post"> 
        <div class="md-card">
            <div class="md-card-content">
              <div class="uk-grid">
                  <div class="uk-width-medium-1-2">
                      <div class="uk-form-row valid">
                        <label for="area">Class</label>
                        <select class="md-input" id="classid" name="classid">
                       
                        </select>  
                      </div> 
                      <div class="uk-form-row valid">
                        <label for="area">Student Name</label>
                        <input type="text" class="md-input md-input-success" id="studentname"  name="studentname" placeholder="Student Name"/><span class="req">*</span>
                      </div>   
                      <div class="uk-form-row valid">
                        <label for="area">Gender</label>
                        <select class="md-input" id="gender" name="gender">
                          <option value="0">Male</option>
                          <option value="1">Female</option>
                        </select>  
                      </div> 
                      <div class="uk-form-row">
                        <label for="area">Address</label>
                        <textarea  class="md-input" id="address" name="address" placeholder="Address"></textarea>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">City</label>
                        <input type="text" class="md-input" id="city" name="city" placeholder="City"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Pincode</label>
                        <input type="text" class="md-input" id="pincode" name="pincode" placeholder="Pincode"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">State</label>
                        <input type="text" class="md-input" id="state" name="state" placeholder="State"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Country</label>
                        <input type="text" class="md-input" id="country" name="country" placeholder="country"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Landline No</label>
                        <input type="text" class="md-input" id="landlineno" name="landlineno" placeholder="landlineno"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Blood Group</label>
                        <input type="text" class="md-input" id="bloodgroup" name="bloodgroup" placeholder="Blood Group"><span class="req">*</span>
                      </div>
                       <div class="uk-form-row">
                        <label for="area">Place of Birth</label>
                        <input type="text" class="md-input" id="placeofbirth" name="placeofbirth" placeholder="Place Of Birth"><span class="req">*</span>
                      </div>
                    </div>
                    <!-- Second Column -->
                    <div class="uk-width-medium-1-2">  
                        <div class="uk-form-row" >
                             <div class="txtlabel">Student Photo</div>
                            <input type="file" id="imgInp" name="imgInp" class="md-btn md-btn-warning"/>
                                <img id="blah" src="/uploads/noimage.png" alt="Your Image" width="100px" height="50px" />
                        </div>    
                        <div class="uk-form-row">
                          <div class="searchlabel">Date of Birth</div>
                          <input type="text" class="md-input md-input-success" placeholder="From Date" name="dob" id="dob" value="<%= moment().format('MM-DD-YYYY') %>">
                        </div>
                        <div class="uk-form-row">
                          <div class="searchlabel">Date of Joining</div>
                          <input type="text" class="md-input md-input-success" placeholder="From Date" name="doj" id="doj" value="<%= moment().format('MM-DD-YYYY') %>">
                        </div>
                        <div class="uk-form-row">
                        <label for="area">Mark of Identity</label>
                        <input type="text" class="md-input" id="markofidentity" name="markofidentity" placeholder="Mark of Identity"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Is Handicap</label>
                        <input type="text" class="md-input" id="ishandicap" name="ishandicap" placeholder="Is Handicap"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Is RTE</label>
                        <input type="text" class="md-input" id="isrte" name="isrte" placeholder="Is RTE"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Father Name</label>
                        <input type="text" class="md-input" id="fathername" name="fathername" placeholder="Father Name"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Father MobileNo</label>
                        <input type="text" class="md-input" id="fathermobno" name="fathermobno" placeholder="Father MobileNo"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Father Email</label>
                        <input type="text" class="md-input" id="fatheremail" name="fatheremail" placeholder="Father Email"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Mother Name</label>
                        <input type="text" class="md-input" id="mothername" name="mothername" placeholder="Mother Name"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Mother MobileNo</label>
                        <input type="text" class="md-input" id="mothermobno" name="mothermobno" placeholder="Mother MobileNo"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Mother Email</label>
                        <input type="text" class="md-input" id="motheremail" name="motheremail" placeholder="Mother Email"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row valid">
                        <label for="area">Primary MobileNo</label>
                        <select class="md-input" id="primarymobno" name="primarymobno">
                          <option value="0">Father</option>
                          <option value="1">Mother</option>
                        </select>  
                        <span class="req">*</span>
                      </div>
                      <div class="uk-form-row valid">
                        <label for="area">Primary Email</label>
                        <select class="md-input" id="primaryemail" name="primaryemail">
                          <option value="0">Father</option>
                          <option value="1">Mother</option>
                        </select>  
                        <span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Father Occupation</label>
                        <input type="text" class="md-input" id="fatheroccupation" name="fatheroccupation" placeholder="Father Occupation"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Mother Occupation</label>
                        <input type="text" class="md-input" id="motheroccupation" name="motheroccupation" placeholder="Mother Occupation"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                            <button type="submit" class="md-btn md-btn-success"><i class="uk-icon-save white paddingleft"></i>Save</button>
                           <a href="/student" class="md-btn md-btn-success"><i class="uk-icon-remove white paddingleft"></i>Cancel</a>
                      </div>
                  </div>                    
              </div>
            </div>
        </div>    
    </form>
    <!-- End Geographical Select-->  
    </div>
</div>

<!--End Content--> 


<!--Start Script-->

 

    
     <script>

        $("#doj").datepicker();
        $("#dob").datepicker();     

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#blah').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
                console.log(input.files[0].name);
                document.getElementById("imagename").value = input.files[0].name ;
            }
        }
    
        $("#imgInp").change(function(){
            readURL(this);

        });
        
        $.ajax({ 
            url: "/student/class",
            cache: false, 
            success: function(data){
                var options="";
                for( var i=0;i<data.custdata.length;i++) {
                   options += '<option value="' + data.custdata[i].id + '">' + data.custdata[i].class_name + '</option>';
                }
                $('#classid').html(options);
            }
            ,error: function(jqXHR, textStatus, err){
              alert('text status '+textStatus+', err '+err);
            }
        });
         
    </script>
   
    <script src="/moment/min/moment.min.js"></script>
    <script src="/js/uikit_custom.min.js"></script>
    <script src="/js/altair_admin_common.min.js"></script>
    <script src="/js/valid.js"></script>
    <script type="text/javascript" src="/js/datatables.js"></script>
    <script src="/js/export.js"></script>
   
    
</body>
</html>