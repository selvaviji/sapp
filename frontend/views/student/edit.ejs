<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../partials/head %>
</head>

<body class="sidebar_main_open sidebar_main_swipe">
    <% include ../../partials/mainheader %>
    <% include ../../partials/sidemenu %>
    
    <!--Start Content-->

<div id="page_content">
    <div id="page_content_inner">
    <h3 class="heading_b uk-margin-bottom">Student</h3>
        <!--Geographical Select-->
        <form id="form" class="new" enctype="multipart/form-data" action="/student/update" method="post"> 
        <div class="md-card">
            <div class="md-card-content">
              <div class="uk-grid">
                  <div class="uk-width-medium-1-2">
                      <div class="uk-form-row valid">
                        <label for="area">Class</label>
                        <select class="md-input" id="classid" name="classid">
                       
                        </select>  
                      </div> 
                      <div class="uk-form-row valid">
                        <label for="area">Student Name</label>
                        <input type="text" class="md-input md-input-success" id="studentname"  name="studentname" value="<%=data[0].student_name %>" /><span class="req">*</span>
                      </div>   
                      <div class="uk-form-row valid">
                        <label for="area">Gender</label>
                        <select class="md-input" id="gender" name="gender">
                          <% if(data[0].gender == "0"){%>
                            <option value="0" selected>Male</option>
                            <option value="1">Female</option>
                          <%}else{%>
                             <option value="0">Male</option>
                            <option value="1" selected>Female</option>
                          <%}%>  
                        </select>  
                      </div> 
                      <div class="uk-form-row">
                        <label for="area">Address</label>
                        <textarea class="md-input" id="address" name="address"><%=data[0].address%></textarea>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">City</label>
                        <input type="text" class="md-input" id="city" name="city" value="<%=data[0].city%>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Pincode</label>
                        <input type="text" class="md-input" id="pincode" name="pincode" value="<%=data[0].pincode%>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">State</label>
                        <input type="text" class="md-input" id="state" name="state" value="<%=data[0].state%>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Country</label>
                        <input type="text" class="md-input" id="country" name="country" value="<%=data[0].country%>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Landline No</label>
                        <input type="text" class="md-input" id="landlineno" name="landlineno" value="<%=data[0].landlineno%>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Blood Group</label>
                        <input type="text" class="md-input" id="bloodgroup" name="bloodgroup" value="<%=data[0].blood_group%>"><span class="req">*</span>
                      </div>
                       <div class="uk-form-row">
                        <label for="area">Place of Birth</lalbel>
                        <input type="text" class="md-input" id="placeofbirth" name="placeofbirth" value="<%=data[0].place_of_birth%>"><span class="req">*</span>
                      </div>
                    </div>
                    <!-- Second Column -->
                    <div class="uk-width-medium-1-2">  
                        <div class="uk-form-row" >
                             <div class="txtlabel">Student Photo</div>
                            <input type="file" id="imgInp" name="imgInp" class="md-btn md-btn-warning"/>
                            <% if(data[0].profile_image == "" || typeof data[0].profile_image == undefined){ %>
                                <img id="blah" src="/uploads/noimage.png" alt="Your Image" width="100px" height="50px" />
                            <%}else{ %>    
                                <img id="blah" src="/uploads/<%=data[0].profile_image%>" alt="Your Image" width="100px" height="50px" />
                            <% } %>

                             <input type="hidden" class="md-input md-input-success" id="sid" name="sid" value="<%=data[0].id%>"/>    
                        </div> 
                        <div class="uk-form-row" >
                          <input type="hidden" id="imagename" name="imagename"> 
                        </div>   
                        <div class="uk-form-row">
                          <div class="searchlabel">Date of Birth</div>
                          <input type="text" class="md-input md-input-success" placeholder="From Date" name="dob" id="dob" value="<%= moment(data[0].dob).format('MM-DD-YYYY') %>">
                        </div>
                        <div class="uk-form-row">
                          <div class="searchlabel">Date of Joining</div>
                          <input type="text" class="md-input md-input-success" placeholder="From Date" name="doj" id="doj" value="<%= moment(data[0].doj).format('MM-DD-YYYY') %>">
                        </div>
                        <div class="uk-form-row">
                        <label for="area">Mark of Identity</label>
                        <input type="text" class="md-input" id="markofidentity" name="markofidentity" value="<%= data[0].mark_identify %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Is Handicap</label>
                        <input type="text" class="md-input" id="ishandicap" name="ishandicap" value="<%= data[0].is_handicap %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Is RTE</label>
                        <input type="text" class="md-input" id="isrte" name="isrte" value="<%= data[0].is_rte %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Father Name</label>
                        <input type="text" class="md-input" id="fathername" name="fathername" value="<%= data[0].father_name %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Father MobileNo</label>
                        <input type="text" class="md-input" id="fathermobno" name="fathermobno" value="<%= data[0].father_mobno %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Father Email</label>
                        <input type="text" class="md-input" id="fatheremail" name="fatheremail" value="<%= data[0].father_email %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Mother Name</label>
                        <input type="text" class="md-input" id="mothername" name="mothername" value="<%= data[0].mother_name %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Mother MobileNo</label>
                        <input type="text" class="md-input" id="mothermobno" name="mothermobno" value="<%= data[0].mother_mobno %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Mother Email</label>
                        <input type="text" class="md-input" id="motheremail" name="motheremail" value="<%= data[0].mother_email %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row valid">
                        <label for="area">Primary MobileNo</label>
                        <select class="md-input" id="primarymobno" name="primarymobno">
                          <% if(data[0].primary_mobno=='0'){%>
                            <option value="0" selected>Father</option>
                            <option value="1">Mother</option>
                          <%}else{%>
                            <option value="0">Father</option>
                            <option value="1" selected>Mother</option>
                          <%}%>  
                        </select>  
                        <span class="req">*</span>
                      </div>
                      <div class="uk-form-row valid">
                        <label for="area">Primary Email</label>
                        <select class="md-input" id="primaryemail" name="primaryemail">
                           <% if(data[0].primary_email=='0'){%>
                            <option value="0" selected>Father</option>
                            <option value="1">Mother</option>
                          <%}else{%>
                            <option value="0">Father</option>
                            <option value="1" selected>Mother</option>
                          <%}%>  
                        </select>  
                        <span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Father Occupation</label>
                        <input type="text" class="md-input" id="fatheroccupation" name="fatheroccupation" value="<%data[0].fatheroccupation %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                        <label for="area">Mother Occupation</label>
                        <input type="text" class="md-input" id="motheroccupation" name="motheroccupation" value="<%data[0].motheroccupation %>"><span class="req">*</span>
                      </div>
                      <div class="uk-form-row valid">
                        <label for="area">Status</label>
                        <select class="md-input" id="status" name="status">
                           <% if(data[0].status=='0'){%>
                            <option value="0" selected>Enable</option>
                            <option value="1">Disable</option>
                          <%}else{%>
                            <option value="0">Enable</option>
                            <option value="1" selected>Disable</option>
                          <%}%>  
                        </select>  
                        <span class="req">*</span>
                      </div>
                      <div class="uk-form-row">
                            <button type="submit" class="md-btn md-btn-success"><i class="uk-icon-save white paddingleft"></i>Save</button>
                           <a href="/staff" class="md-btn md-btn-success"><i class="uk-icon-remove white paddingleft"></i>Cancel</a>
                      </div>
                  </div>                    
              </div>
            </div>
        </div>    
    </form>
    <!-- End Geographical Select-->  
    </div>
</div>

<!--End Content--> 


<!--Start Script-->

 

    
     <script>

        $("#doj").datepicker();
        $("#dob").datepicker();     
        var imgdata = "<%= data[0].profile_image %>";
        if(imgdata != ""){
            document.getElementById("imagename").value = imgdata;
        }
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#blah').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    
        $("#imgInp").change(function(){
            readURL(this);

        });
      
      var classid = "<%= data[0].id %>";  
        $.ajax({ 
            url: "/student/class",
            cache: false, 
            success: function(data){
                var options="";
                for( var i=0;i<data.custdata.length;i++) {
                  if(classid == data.custdata[i].id){
                   options += '<option value="' + data.custdata[i].id + '" selected>' + data.custdata[i].class_name + '</option>';
                  }else{
                     options += '<option value="' + data.custdata[i].id + '">' + data.custdata[i].class_name + '</option>';
                  }
                }
                $('#classid').html(options);
            }
            ,error: function(jqXHR, textStatus, err){
              alert('text status '+textStatus+', err '+err);
            }
        });
         
    </script>
   
    <script src="/moment/min/moment.min.js"></script>
    <script src="/js/uikit_custom.min.js"></script>
    <script src="/js/altair_admin_common.min.js"></script>
    <script src="/js/valid.js"></script>
    <script type="text/javascript" src="/js/datatables.js"></script>
    <script src="/js/export.js"></script>
   
    
</body>
</html>